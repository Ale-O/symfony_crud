{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_filefields_edit' %}

{% block main %}
    <h1>{{ filefields.title }}</h1>

    {{ include('admin/fields/_filefields_form.html.twig', {
        form: form,
        element: element,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_element_show', {id: element.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('admin/fields/_filefields_delete_form.html.twig', {filefields: filefields}, with_context = false) }}
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
