{% extends 'base.html.twig' %}

{% block body_id 'user_new' %}

{% block main %}
    <h1>{{ 'action.create_account'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.fullName) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.create'|trans }}
        </button>
        <a href="{{ path('homepage') }}" class="btn btn-link">
            <i class="fa fa-home" aria-hidden="true"></i> {{ 'action.back'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
